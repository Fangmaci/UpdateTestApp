<Window
    x:Class="UpdateTestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UpdateTestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            x:Name="CurrentlyInstalledVersion"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Hallo, Welt!" />
        <Button Content="Check For Updates" x:Name="CheckForUpdatesButton" Click="CheckForUpdatesButton_Click"/>
        <Button Content="Update" x:Name="UpdateButton" Click="UpdateButton_Click"/>
    </StackPanel>
</Window>
